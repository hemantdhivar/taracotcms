<?pl my $off = ($level-1)*20; ?><div id="comment_[== $id =]" class="comment" style="margin-left: [== $off =]px">
<?pl if ($deleted) { ?><div class="muted">[== $lang->{comment_deleted} =]</div><?pl } else { ?><div style="height:6px;"></div>
