<span id="comment_[== $id =]_text">[== $text =]</span>
<?pl if ($auth->{id}) { ?><div style="height:3px;"></div><span id="comment_reply_[== $id =]" class="comment_reply">[== $lang->{comment_reply} =]</span><span id="comment_reply_attach_[== $id =]"></span><?pl } ?>
<?pl } ?>
