  }
  var page_names = new Array();
  for (var key in delete_data) {
    var val = delete_data[key];
    page_names.push($('#pagetitle_'+val).html())
  }    
  $('#delete_row_list').html(page_names.join(', '));
  $('#delete_confirmation').modal({keyboard: false});
});

